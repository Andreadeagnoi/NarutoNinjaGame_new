<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation = "vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jutsu Name"
        android:id="@+id/jutsuName"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/jutsuEffects"
        android:layout_alignEnd="@+id/jutsuEffects" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jutsu Attributes"
        android:id="@+id/jutsuAttributes"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jutsu Requirements"
        android:id="@+id/jutsuRequirements"
        android:layout_below="@+id/jutsuAttributes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jutsu Effects"
        android:id="@+id/jutsuEffects"
        android:layout_below="@+id/jutsuRequirements"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>